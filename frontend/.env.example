# =================================================================
# FRONTEND ENVIRONMENT CONFIGURATION TEMPLATE
# =================================================================

# =================================================================
# API & BACKEND CONFIGURATION
# =================================================================

# Backend API URL
VITE_API_BASE_URL=http://localhost:5000/api/v1

# WebSocket URL for real-time features
VITE_WEBSOCKET_URL=http://localhost:5000

# API Timeout (milliseconds)
VITE_API_TIMEOUT=30000

# =================================================================
# MAPPING & VISUALIZATION SERVICES
# =================================================================

# Mapbox Access Token (for 2D mapping)
VITE_MAPBOX_ACCESS_TOKEN=your-mapbox-access-token

# Google Maps API Key
VITE_GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Default Map Center (latitude, longitude)
VITE_DEFAULT_MAP_CENTER_LAT=37.7749
VITE_DEFAULT_MAP_CENTER_LNG=-122.4194

# Default Map Zoom Level
VITE_DEFAULT_MAP_ZOOM=10

# =================================================================
# 3D VISUALIZATION CONFIGURATION
# =================================================================

# Enable/Disable 3D visualization features
VITE_3D_VISUALIZATION_ENABLED=true

# 3D Performance settings
VITE_3D_MAX_FRAME_RATE=60
VITE_3D_ANTI_ALIASING=true
VITE_3D_SHADOW_QUALITY=medium

# Drone 3D model settings
VITE_3D_DRONE_MODEL_DETAIL=high
VITE_3D_TERRAIN_DETAIL=medium

# =================================================================
# FEATURE FLAGS
# =================================================================

# Core Features
VITE_REAL_TIME_UPDATES=true
VITE_AI_FEATURES=true
VITE_PREDICTIVE_ANALYTICS=true
VITE_WEATHER_INTEGRATION=true

# Advanced Features
VITE_MULTI_MISSION_SUPPORT=true
VITE_FLEET_MANAGEMENT=true
VITE_ADVANCED_CHARTS=true
VITE_EXPORT_FEATURES=true

# Experimental Features
VITE_BETA_FEATURES=false
VITE_VOICE_CONTROL=false
VITE_AR_VISUALIZATION=false

# =================================================================
# UI/UX CONFIGURATION
# =================================================================

# Theme Settings
VITE_DEFAULT_THEME=light
VITE_THEME_SWITCHING=true

# Animation Settings
VITE_ANIMATIONS_ENABLED=true
VITE_REDUCED_MOTION_SUPPORT=true

# Accessibility
VITE_HIGH_CONTRAST_SUPPORT=true
VITE_SCREEN_READER_SUPPORT=true

# =================================================================
# PERFORMANCE & OPTIMIZATION
# =================================================================

# Data fetching intervals (milliseconds)
VITE_DRONE_STATUS_REFRESH_INTERVAL=5000
VITE_MISSION_PROGRESS_REFRESH_INTERVAL=3000
VITE_FLEET_STATUS_REFRESH_INTERVAL=10000

# Chart update intervals
VITE_CHART_UPDATE_INTERVAL=5000
VITE_ANALYTICS_REFRESH_INTERVAL=30000

# Caching settings
VITE_ENABLE_QUERY_CACHING=true
VITE_CACHE_DURATION=300000  # 5 minutes

# =================================================================
# DEVELOPMENT & DEBUGGING
# =================================================================

# Development mode features
VITE_DEVELOPMENT_MODE=true
VITE_MOCK_API_RESPONSES=false
VITE_DEBUG_WEBSOCKETS=false
VITE_PERFORMANCE_MONITORING=false

# Logging level (error|warn|info|debug)
VITE_LOG_LEVEL=info

# =================================================================
# ANALYTICS & MONITORING
# =================================================================

# Application analytics
VITE_ANALYTICS_ENABLED=false
VITE_ANALYTICS_TRACKING_ID=your-analytics-tracking-id

# Error tracking
VITE_ERROR_TRACKING_ENABLED=false
VITE_SENTRY_DSN=your-sentry-dsn

# Performance monitoring
VITE_PERFORMANCE_MONITORING_ENABLED=false
VITE_APM_RUM_ENABLED=false

# =================================================================
# SECURITY CONFIGURATION
# =================================================================

# Content Security Policy
VITE_CSP_ENABLED=true

# Authentication settings
VITE_AUTH_TOKEN_STORAGE=localStorage
VITE_SESSION_TIMEOUT=3600000  # 1 hour

# =================================================================
# EXTERNAL INTEGRATIONS
# =================================================================

# Weather service
VITE_WEATHER_SERVICE_ENABLED=true
VITE_WEATHER_UPDATE_INTERVAL=600000  # 10 minutes

# Notification services
VITE_PUSH_NOTIFICATIONS_ENABLED=false
VITE_BROWSER_NOTIFICATIONS_ENABLED=true

# Social features
VITE_SHARING_ENABLED=true
VITE_EXPORT_FORMATS=pdf,png,csv,geojson

# =================================================================
# COMPLIANCE & ACCESSIBILITY
# =================================================================

# Accessibility compliance
VITE_WCAG_COMPLIANCE_LEVEL=AA
VITE_ARIA_LIVE_REGIONS=true

# Data privacy
VITE_GDPR_COMPLIANCE=false
VITE_COOKIE_CONSENT=false
VITE_DATA_RETENTION_NOTICE=true

# =================================================================
# BUILD & DEPLOYMENT
# =================================================================

# Build configuration
VITE_APP_VERSION=1.0.0
VITE_BUILD_TIMESTAMP=auto-generated

# Environment indicator
VITE_ENVIRONMENT=development

# Asset optimization
VITE_OPTIMIZE_IMAGES=true
VITE_COMPRESS_ASSETS=true